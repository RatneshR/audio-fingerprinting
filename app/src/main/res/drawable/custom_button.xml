<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/yellow"
                android:endColor="@color/lemon_chiffon"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/light_grey" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="25dp"
                android:top="0dp"
                android:right="25dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/orange"
                android:startColor="@color/dark_orange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/gray" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="25dp"
                android:top="0dp"
                android:right="25dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/button_color_login_signup"
                android:startColor="@color/button_color_login_signup"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/button_color_login_signup" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="50dp"
                android:top="0dp"
                android:right="50dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>