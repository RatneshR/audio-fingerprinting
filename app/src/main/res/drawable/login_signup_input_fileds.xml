<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="@color/text_color_input_focus_signup"/>
            <stroke
                android:width="2.3dp"
                android:color="@color/text_color_input_focus_outline_signup" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="@color/text_color_input_focus_signup"/>
            <stroke
                android:width="2.3dp"
                android:color="@color/text_color_input_focus_outline_signup" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="2.3dp"
                android:color="@color/text_color_input_focus_outline_signup" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
<!--            <gradient-->
<!--                android:startColor="#F2F2F2"-->
<!--                android:centerColor="#FFFFFF"-->
<!--                android:endColor="#FFFFFF"-->
<!--                android:angle="270"-->
<!--                />-->

            <solid android:color="@color/text_color_input_signup"/>
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

</selector>